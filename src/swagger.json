{
    "openapi": "3.0.0",
    "components": {        
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    },
    "info": {
      "title": "Frmk Challenge Documentation",
      "description": "This is an API FRMK Challenge",
      "version": "1.0.1",
      "contact": {
        "email":"felipevilellaalves@hotmail.com"
      }
    },
    "paths": {
      "/decomposition": {
        "post": {
          "tags": ["Decomposition"],
          "summary": "Decomposition number",
           "description": "Decompose a number into all divisors, also enumerating those that are prime",
           "requestBody": {
             "content": {
               "application/json": {
                 "schema": {
                   "type": "object",
                   "properties": {
                     "number": {
                       "type": "number"
                     }
                   },
                   "example": {
                    "number": 45
                   }
                 }
               }
             }
           },
           "responses": {
             "201": {
               "description": "Created",
               "security": [
                { "bearerAuth": []}
               ],
               "content": {
                "application/json": {
                  "type": "string[]",
                  "example": {
                    "entry_number": 45,
                    "dividing_numbers": [
                      1,
                      3,
                      5,
                      9,
                      15,
                      45
                    ],
                    "prime_divisors": [
                      1,
                      3,
                      5
                    ]
                  }
                }
               }
             },
             "401": {
               "description": "User Already exists"
             }
           }
        }
      }
    }
}